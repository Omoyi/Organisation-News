{{#partial "content"}}

    <body>
    <br><br><br><br>
    <h1>ALL USERS</h1><br><br><br><br>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">post</th>
            <th scope="col">Role</th>
        </tr>
        </thead>
        <tbody>

        {{#each userInfo}}
            <tr class="table-light">
                <td>{{name}}</td>
                <td>{{post}}</td>
                <td>{{role}}</td>
                <td><a href="/user/new"><button type="submit" class="btn btn-warning">add users</button></a></td>
                <td><a href="depart/new"><button type="submit" class="btn btn-success">Add department</button></a></td>
                <td><a href="/generalnews"><button type="submit" class="btn btn-danger">Add news</button></a></td>
            </tr>
        {{/each}}
        </tbody>
    </table>
    </body><br><br>
    <div class="half-page"><br><br>
        <a style="margin-left: 4%;" href="/home"><i class="fas fa-arrow-left"></i></a>
        <h2 class="text-center users-hd">Users</h2>
        <hr>
        <i class="fas fa-plus for-user" data-toggle="modal" data-target="#basicExampleModal"> Add Employee</i>
        <div class="modal fade right" id="basicExampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <form action="/users/" method="post">
                <div class="modal-dialog cascading-modal" role="document">

                    <div class="modal-content">
                        <div class="modal-header primary-color white-text">
                            <h4 class="title">
                                <i class="fas fa-user"></i>Employee Status</h4>
                        </div>

                        <div class="modal-body">
                            <div class="md-form form-sm">
                                <i class="fas fa-user">Employee name</i>
                                <input type="text" name="name" class="form-control form-control-sm" placeholder=" Name" required>
                            </div>

                            <div class="md-form form-sm">
                                <i class="fas fa-briefcase">Employee Position</i>
                                <input type="text" name="post" class="form-control form-control-sm" placeholder="e.g. CEO" required>
                            </div>

                            <div class="md-form form-sm">
                                <i class="fas fa-briefcase">Employee Role</i>
                                <input type="text" name="role" class="form-control form-control-sm" placeholder="" required>
                            </div>
                            <div class="text-center mt-4 mb-2">
                                <button class="btn btn-outline-primary" type="submit">Add
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

{{/partial}}
{{> layout.hbs}}